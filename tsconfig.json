{
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"lib": ["ESNext"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "nodenext",
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"forceConsistentCasingInFileNames": true
	},
	"ts-node": { "require": ["tsconfig-paths/register"] },
	"include": ["src", "src/types"]
}
